<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/palybar_list_item_ll"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/play_re"
        android:layout_width="match_parent"
        android:layout_height="49.5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/palybar_list_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingRight="10dp"
            android:text="111"
            android:textColor="@color/grey700"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/play_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/palybar_list_item_name_tv"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:text="-"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/palybar_list_item_singer_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/play_text1"
            android:layout_toLeftOf="@+id/palybar_list_delete"
            android:paddingRight="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="111"
            android:textColor="@color/black2"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/palybar_list_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/delete_list" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/play_re"
        android:background="@color/colorDividerGray" />
</RelativeLayout>